@using Business.Models
@model IEnumerable<TerminalModel>

@{
    var title = "Terminals";
    ViewData["Title"] = title;
}

<div class="row">
    <div class="col-8 offset-2 d-flex flex-column gap-3">
                        @if (!(TempData[Constants.SuccessFieldName] is null))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData[Constants.SuccessFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
        <h2>@title</h2>
        @foreach(var terminal in Model)
        {
            <div class="card">
  <div class="card-body">
    <h5 class="card-title d-flex justify-content-between">
        <span><a title="to terminal page" asp-action="Details" asp-route-id="@terminal.Id">Terminal: @terminal.Name</a></span>
        <span>
            <a class="btn btn-primary btn-sm" title="edit" asp-action="Edit" asp-route-id="@terminal.Id">Edit</a>
            <a class="btn btn-danger btn-sm" title="delete" asp-action="Delete" asp-route-id="@terminal.Id">Delete</a>
        </span>
    </h5>
                    <p class="card-text">Name: @terminal.Name<br />
        International: @terminal.IsInternational.ToYesNoString()<br /></p>
  </div>
</div>
        }
        <div class="d-grid">
  <a class="btn btn-primary" title="add" asp-action="Create">Add</a>
</div>
    </div>
</div>