@using Business.Models
@model PassengerModel

@{
    var title = $"Delete a passenger {Model.FullName}";
    ViewData["Title"] = title;
}

<div class="row py-3">
    <div class="col-8 offset-2">
        @if (!(TempData[Constants.ErrorFieldName] is null))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
  @TempData[Constants.ErrorFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
        <h2>@title (Passport code: @Model.PassportCode)</h2>
        <p>Are you sure you want to delete this passenger?</p>
        <form method="post">
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-danger">Yes, delete it</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Go back to details</a>
            </div>
        </form>
    </div>
</div>
