@using Business.Models
@model BaggageModel

@{
    var title = $"Delete a baggage";
    ViewData["Title"] = title;
}

<div class="row py-3">
    <div class="col-8 offset-2">
        @if (!(TempData[Constants.ErrorFieldName] is null))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
  @TempData[Constants.ErrorFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
        <h2>@title</h2>
                @{
        var volume = $"{Model.Volume:F4}";
        var weight = $"{Model.Weight:F4}";
        var price = $"{Model.Price:F2}";
    }
        <p>Are you sure you want to delete this baggage 
            (Volume: @volume; Weight: @weight; Price: @price; Ticket Id: @Model.TicketId)?</p>
        <form method="post">
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-danger">Yes, delete it</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Go back to details</a>
            </div>
        </form>
    </div>
</div>
