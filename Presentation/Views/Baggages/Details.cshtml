@using Business.Models
@model BaggageModel

@{
    ViewData["Title"] = "Baggage details";
}

<div class="row py-3">
    <div class="col-8 offset-2">
                @if (!(TempData[Constants.SuccessFieldName] is null))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData[Constants.SuccessFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
    <h5 class="d-flex justify-content-between">
        <span>Baggage</span>
        <span>
            <a class="btn btn-primary" title="edit" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger" title="delete" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </span>
    </h5>
        @{
        var volume = $"{Model.Volume:F4}";
        var weight = $"{Model.Weight:F4}";
        var price = $"{Model.Price:F2}";
    }
    <p>Volume: @volume m^3<br />
        Weight: @weight kg<br />
        Price: @price UAH<br>
        <a title="Ticket" asp-controller="Tickets" asp-action="Details" asp-route-id="@Model.TicketId">Ticket</a></p>
            <div>
    <a class="btn btn-primary" href="javascript:history.go(-1)" title="go back">Back</a>
  </div>
  </div>
</div>
