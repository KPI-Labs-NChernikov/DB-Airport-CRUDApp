@using Business.Models
@model TicketModel

@{
    ViewData["Title"] = $"Ticket {Model.Code}";
}

<div class="row py-3">
    <div class="col-8 offset-2">
                @if (!(TempData[Constants.SuccessFieldName] is null))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData[Constants.SuccessFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
    <h5 class="d-flex justify-content-between">
        <span>Ticket: @Model.Code</span>
        <span>
            <a class="btn btn-primary" title="edit" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger" title="delete" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </span>
    </h5>
@{var price = $"{Model.Price:F2}";}
    <p>Price: @price UAH<br />
        Type: @Model.Type<br />
        Passenger Id: @Model.PassengerId<br />
        Flight Id: @Model.FlightId</p>
            <div>
    <a class="btn btn-primary" asp-action="Index" title="go back">Back</a>
  </div>
  </div>
</div>
