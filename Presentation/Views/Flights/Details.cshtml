@using Business.Models
@model FlightModel

@{
    ViewData["Title"] = $"Flight {Model.Id}";
}

<div class="row py-3">
    <div class="col-8 offset-2">
                @if (!(TempData[Constants.SuccessFieldName] is null))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData[Constants.SuccessFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
    <h5 class="d-flex justify-content-between">
        <span>Flight: @Model.Id</span>
        <span>
            <a class="btn btn-primary" title="edit" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger" title="delete" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </span>
    </h5>
    <p>Destination: @Model.To<br />
        Date: @Model.Date<br />
        <a title="Plane" asp-controller="Planes" asp-action="Details" asp-route-id="@Model.PlaneId">Plane</a><br />
        <a title="Terminal" asp-controller="Terminals" asp-action="Details" asp-route-id="@Model.TerminalId">Terminal</a></p>
            <div>
    <a class="btn btn-primary" href="javascript:history.go(-1)" title="go back">Back</a>
  </div>
  </div>
</div>
