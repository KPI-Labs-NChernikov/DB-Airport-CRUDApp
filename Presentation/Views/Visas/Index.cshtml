@using Business.Models
@model IEnumerable<VisaModel>

@{
    var title = "Visas";
    ViewData["Title"] = title;
}

<div class="row">
    <div class="col-8 offset-2 d-flex flex-column gap-3">
                        @if (!(TempData[Constants.SuccessFieldName] is null))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData[Constants.SuccessFieldName]
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
        <h2>@title</h2>
        @foreach(var visa in Model)
        {
            <div class="card">
  <div class="card-body">
    <h5 class="card-title d-flex justify-content-between">
        <span><a title="to visa page" asp-action="Details" asp-route-id="@visa.Id">Visa: @visa.Code</a></span>
        <span>
            <a class="btn btn-primary btn-sm" title="edit" asp-action="Edit" asp-route-id="@visa.Id">Edit</a>
            <a class="btn btn-danger btn-sm" title="delete" asp-action="Delete" asp-route-id="@visa.Id">Delete</a>
        </span>
    </h5>
    <p class="card-text">Issue: @visa.Issue.ToShortDateString()<br />
        Expire: @visa.Expiry.ToShortDateString()<br />
        <a title="Passenger" asp-controller="Passengers" asp-action="Details" asp-route-id="@visa.PassengerId">Passenger Id: @visa.PassengerId</a></p>
  </div>
</div>
        }
        <div class="d-grid">
  <a class="btn btn-primary" title="add" asp-action="Create">Add</a>
</div>
    </div>
</div>
